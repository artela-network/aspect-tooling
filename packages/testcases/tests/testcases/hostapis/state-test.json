        "type": "callContract",
        "options": {
          "contract": "$contractAddress",
          "method": "increase",
          "abi": "#CounterContract.abi",
          "args": [],
          "gas": "1000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          }
        }
      },
      {
        "description": "Change Aspect bind version to 2",
        "account": "",
        "type": "changeVersion",
        "options": {
          "aspect": "$aspectId",
          "account": "$contractAddress",
