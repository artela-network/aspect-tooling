      {
        "description": "Unbind Contract from Aspect",
        "account": "",
        "type": "unbind",
        "options": {
          "aspect": "$aspectId",
          "account": "$contractAddress",
          "gas": "1000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          }
        }
      },
      {
        "description": "Bind contract with Aspect version 1",
        "account": "",
        "type": "bind",
        "options": {
          "aspect": "$aspectId",
          "account": "$contractAddress",
          "version": 1,
          "priority": -1,
          "gas": "1000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
