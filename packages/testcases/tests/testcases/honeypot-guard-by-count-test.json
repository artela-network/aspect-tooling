{
    "description": "Test Gurad By Count Aspect",
    "actions": [
      {
        "description": "Create new accounts",
        "account": "",
        "type": "createAccounts",
        "options": {
          "fundingAmount": 1,
          "accountNumber": 2
        },
        "expect": {
          "error": {
            "eq": ""
          },
          "result.accounts.length": {
            "eq": 2
          }
        },
        "output": {
          "accounts": "result.accounts"
        }
      },
      {
        "description": "Deploy HoneyPot Contract",
        "account": "",
        "type": "deployContract",
        "options": {
          "code": "#HoneyPotContract.bytecode",
          "abi": "#HoneyPotContract.abi",
          "args": [],
          "gas": "3000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          },
          "error": ""
        },
        "output": {
          "honeyPotAddress": "receipt.contractAddress"
        }
      },
      {
        "description": "Call contract honeyPot deposit",
        "account": "",
        "type": "callContract",
        "options": {
          "contract": "$honeyPotAddress",
          "method": "deposit",
          "abi": "#HoneyPotContract.abi",
          "args": [],
          "value": "0.1",
          "gas": "3000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          },
          "error": {
            "eq": ""
          }
        }
      },
      {
        "description": "Query honeyPot balance 0.1 art",
        "account": "",
        "type": "queryBasic",
        "options": {
          "contract": "$honeyPotAddress",
          "abi": "#HoneyPotContract.abi",
          "args": [],
          "queryAccount": "$honeyPotAddress",
          "gas": "300000",
          "isCall": true
        },
        "expect": {
          "result.balance": {
            "eq": "100000000000000000"
          },
          "error": {
            "eq": ""
          }
        }
      },
      {
        "description": "Deploy Attack Contract",
        "account": "$accounts.1",
        "type": "deployContract",
        "options": {
          "code": "#AttackContract.bytecode",
          "abi": "#AttackContract.abi",
          "args": ["$honeyPotAddress"],
          "gas": "1000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          },
          "error": ""
        },
        "output": {
          "attackAddress": "receipt.contractAddress"
        }
      },
      {
        "description": "Call attack contract deposit",
        "account": "$accounts.1",
        "type": "callContract",
        "options": {
          "contract": "$attackAddress",
          "method": "deposit",
          "abi": "#AttackContract.abi",
          "args": [],
          "value": "0.1",
          "gas": "300000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          },
          "error": {
            "eq": ""
          }
        }
      },
      {
        "description": "Query honeyPot balance 0.2 art",
        "account": "",
        "type": "queryBasic",
        "options": {
          "contract": "$honeyPotAddress",
          "abi": "#HoneyPotContract.abi",
          "args": [],
          "queryAccount": "$honeyPotAddress",
          "gas": "300000",
          "isCall": true
        },
        "expect": {
          "result.balance": {
            "eq": "200000000000000000"
          },
          "error": {
            "eq": ""
          }
        }
      },
      {
        "description": "Deploy Guard By Count Aspect",
        "account": "",
        "type": "deployAspect",
        "options": {
          "args": {
            "properties": [
              {
                "key": "owner",
                "value": "$accounts.0"
              },
              {
                "key": "HoneyPotAddr",
                "value": "$honeyPotAddress"
              },
              {
                "key": "binding",
                "value": "$honeyPotAddress"
              }
            ],
            "joinPoints": ["PreContractCall", "PostContractCall"],
            "code": "#GuardByCountAspect.bytecode"
          },
          "gas": "5000000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          },
          "error": {
            "eq": ""
          }
        },
        "output": {
          "aspectId": "receipt.aspectAddress"
        }
      },
      {
        "description": "Bind contract with Aspect",
        "account": "",
        "type": "bind",
        "options": {
          "aspect": "$aspectId",
          "account": "$honeyPotAddress",
          "version": 1,
          "priority": -1,
          "gas": "300000"
        },
        "expect": {
          "receipt.status": {
            "eq": true
          },
          "error": ""
        }
      },
      {
        "description": "Call attack contract attack",
        "account": "$accounts.1",
        "type": "callContract",
        "options": {
          "contract": "$attackAddress",
          "method": "attack",
          "abi": "#AttackContract.abi",
          "args": [],
          "gas": "300000"
        },
        "expect": {
          "error": {
            "include": "execution reverted"
          }
        }
      },
      {
        "description": "Query honeyPot balance 0.2 art",
        "account": "",
        "type": "queryBasic",
        "options": {
          "contract": "$honeyPotAddress",
          "abi": "#HoneyPotContract.abi",
          "args": [],
          "queryAccount": "$honeyPotAddress",
          "gas": "300000",
          "isCall": true
        },
        "expect": {
          "result.balance": {
            "eq": "200000000000000000"
          },
          "error": {
            "eq": ""
          }
        }
      }
    ]
  }
  